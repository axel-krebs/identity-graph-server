<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>de.akrebs.cloud</groupId>
		<artifactId>igs-tc-parent</artifactId>
		<version>1.0.0</version>
	</parent>

	<packaging>feature</packaging>

	<artifactId>igs-tc-search-feature</artifactId>

	<name>IGS :: Sample :: Search Feature</name>

	<description>A sample search service.</description>

	<properties>
		<karaf.features.plugin.version>2.4.4</karaf.features.plugin.version>
	</properties>

	<dependencies>

		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>igs-tc-search-bundle</artifactId>
			<version>${project.version}</version>
		</dependency>

		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>igs-karaf-features</artifactId>
			<version>${project.version}</version>
			<classifier>features</classifier>
			<type>xml</type>
		</dependency>

	</dependencies>

	<build>

		<finalName>${project.artifactId}</finalName>

		<resources>

			<resource>
				<directory>src/main/resources</directory>
				<filtering>false</filtering>
			</resource>

			<resource>
				<directory>src/main/feature</directory>
				<filtering>true</filtering>
				<includes>
					<include>**/*</include>
				</includes>
				<targetPath>${project.build.directory}/feature</targetPath>
			</resource>

		</resources>

		<plugins>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>resources</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.apache.karaf.tooling</groupId>
				<artifactId>karaf-maven-plugin</artifactId>
				<extensions>true</extensions>
				<configuration>
					<markRuntimeScopeAsDependency>true</markRuntimeScopeAsDependency>
					<!-- <aggregateFeatures>false</aggregateFeatures> -->
				</configuration>
				<executions>
					<execution>
						<id>verify-features</id>
						<phase>verify-features</phase>
						<goals>
							<goal>verify</goal>
						</goals>
						<configuration>
							<descriptors>
								<descriptor>file:${project.build.directory}/feature/feature.xml</descriptor>
							</descriptors>
							<features>
								<feature>log</feature>
							</features>
						</configuration>
					</execution>
					<!-- Overwrite the KAR goal to prevent generation of feature.xml -->
					<execution>
						<id>add-to-kar</id>
						<phase>package</phase>
						<goals>
							<goal>kar</goal>
						</goals>
						<configuration>
							<featuresFile>${project.build.directory}/feature/feature.xml</featuresFile>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<executions>
					<execution>
						<id>attach-artifacts</id>
						<phase>package</phase>
						<goals>
							<goal>attach-artifact</goal>
						</goals>
						<configuration>
							<artifacts>
								<artifact>
									<file>target/feature/feature.xml</file>
									<type>xml</type>
								</artifact>
							</artifacts>
						</configuration>
					</execution>
				</executions>
			</plugin>

		</plugins>
	</build>

</project>