						<!-- <blacklistedFeature>jdbc</blacklistedFeature> -->
						<!-- <blacklistedFeature>jpa</blacklistedFeature> -->
						<!-- <blacklistedFeature>eclipselink</blacklistedFeature> -->
					</blacklistedFeatures>
					<pidsToExtract>
						!jmx.acl.*,
						!org.apache.karaf.command.acl.*,
						*
					</pidsToExtract>
				</configuration>
